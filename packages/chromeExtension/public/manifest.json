{
  "manifest_version": 2,
  "name": "crypto balance",
  "description": "balance viewer for cryptocurrency exchanges and wallets",
  "version": "0.1.2",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "permissions": [
    "https://api.binance.com/*",
    "https://api.bitfinex.com/*",
    "https://api.bithumb.com/*",
    "https://cex.io/*",
    "https://api.coinone.co.kr/*",
    "https://api.korbit.co.kr/*",
    "https://crix-api.upbit.com/*",
    "https://api.etherscan.io/*",
    "https://www.koreaexim.go.kr/*",
    "storage"
  ],
  "file_handlers": {
    "text": {
      "types": [
          "text/*"
      ]
    }
  }
}
